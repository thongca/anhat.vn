@model IEnumerable<WebSaleHfFood.ViewModels.RelatedProductViewModel>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title related__product__title">
                <h2>Related Product</h2>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-lg-3 col-md-4 col-sm-6">
            @if (!string.IsNullOrEmpty(item.CampaignId))
            {
                <div class="product__discount__item">
                    <div class="product__discount__item__pic set-bg"
                         data-setbg="@Url.Content(item.Img)">
                        <div class="product__discount__percent">-@Html.DisplayFor(modelItem => item.PercentDiscount)%</div>
                        <ul class="product__item__pic__hover">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="product__discount__item__text">
                        <h5><a class="cursor-link"  onclick="addProductRecent('@item.Id','@item.Name', @DateTime.Now,@item.Price)">@Html.DisplayFor(modelItem => item.Name)</a></h5>
                        <div class="product__item__price">@Html.DisplayFor(modelItem => item.SalePrice) <span>@Html.DisplayFor(modelItem => item.Price)</span></div>
                    </div>
                </div>
            }
            else
            {
                <div class="product__item">
                    <div class="product__item__pic set-bg" data-setbg="@Url.Content(item.Img)">
                        <ul class="product__item__pic__hover">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="product__item__text">
                        <h6><a onclick="addProductRecent('@item.VariantId', '@item.Img', '@item.Name', '@DateTime.Now', @item.Price)">@Html.DisplayFor(a => item.Name)</a></h6>
                        <h5>@Html.DisplayFor(modelItem => item.Price)</h5>

                    </div>
                </div>
            }

        </div>
        }
    </div>
</div>

