@model WebSaleHfFood.ViewModels.CategoryHighlightViewModel
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>SẢN PHẨM NỔI BẬT</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">Tất cả</li>
                        @foreach (var item in Model.Categories)
                        {
                            <li data-filter=".@item.GroupId">@Html.DisplayFor(x => item.Name)</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model.Products)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix @item.GroupId">
                    <div class="featured__item">

                        <div class="featured__item__pic set-bg" data-setbg="@Url.Content(item.Img)">

                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li>
                                    <a class="btn-add-cart"><i class="fa fa-shopping-cart"></i></a>
                                </li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a class="cursor-link" onclick="addProductRecent('@item.Id', '@item.Img', '@item.Name', '@DateTime.Now', @item.Price)">@Html.DisplayFor(x => item.Name)</a></h6>
                            <h5>@Html.DisplayFor(x => item.Price)</h5>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>