@model IEnumerable<WebSaleHfFood.ViewModels.ProductGroupViewModel>
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="@Url.Content(item.Img)">
                            <h5><a href="#@item.Id">@Html.DisplayFor(modelItem => item.Name)</a></h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>