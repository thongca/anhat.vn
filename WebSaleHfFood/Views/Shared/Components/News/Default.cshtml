@model IEnumerable<WebSaleHfFood.ViewModels.NewsViewModel>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title from-blog__title">
                <h2>Bài viết</h2>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in @Model)
        {
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="blog__item">
                    <div class="blog__item__pic">
                        <img src="@Url.Content(item.ImgUrlMaster)" alt="">
                    </div>
                    <div class="blog__item__text">
                        <ul>
                            <li><i class="fa fa-calendar-o"></i> @Html.DisplayFor(mo => item.CreatedDate)</li>
                            <li><i class="fa fa-comment-o"></i> 5</li>
                        </ul>
                        <h5><a href="#" onclick="addNewsRecent('@item.Id', '@item.Title', '@DateTime.Now', '@item.ImgUrlMaster')">@Html.DisplayFor(mo => item.Title)</a></h5>
                        @Html.Raw(item.SortContent)
                    </div>
                </div>
            </div>
        }

    </div>
</div>