@model WebSaleHfFood.ViewModels.ProductInfoDetailViewModel
<div class="row">
    <div class="col-md-8">
        <div class="row mb-5">
            <div class="col-md-12">
               @Html.Raw(Model.Description)
            </div>
        </div>
        <div class="row ">
            <div class="col-md-12 mb-5 pt-5" style="border-top: 1px solid">
                <h4>Đánh giá & xếp hạng</h4>
            </div>
            <div class="col-md-6">
                <table class="table" data-test="rating-table">
                    <tbody>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <tr>
                                <td class="label py-1" style="border-top-color: white; font-size: 14px">
                                    @for (int j = 1; j <= i; j++)
                                    {
                                        <i class="fa fa-star" style="color: #EDBB0E"></i>
                                    }

                                </td>
                                <td class="py-1" width="70%" style="border-top-color: white;">
                                    <div class="progress" style="height: 1.2rem">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                @if (@Model.FeaturedReview != null)
                {
                    <h5>Đánh giá nổi bật</h5>
                    <div class="row">
                        <div class="col-sm-6">
                            @for (int i = 0; i < @Model.FeaturedReview.Rating; i++)
                            {
                                <i class="fa fa-star" style="color: #EDBB0E"></i>
                            }
                        </div>
                        <div class="col-sm-6 text-right">
                            @Html.DisplayFor(c => Model.FeaturedReview.CreatedDate)
                        </div>
                    </div>
                    <p>
                        @Html.DisplayFor(c => Model.FeaturedReview.Comment)
                    </p>
                }

            </div>
            @*bình luận dưới*@
        <div class="col-md-12 pt-3" style=" border-top: 1px solid;">
            @if (@Model.ProductComments.Any())
            {
                @foreach (var item in @Model.ProductComments)
                {

                    <div class="row">
                        <div class="col-sm-6">
                            <strong>@Html.DisplayFor(x => item.FullName)</strong><span> đánh giá </span>
                            @for (int i = 0; i < item.Rating; i++)
                            {
                                <i class="fa fa-star" style="color: #EDBB0E"></i>
                            }
                        </div>
                        <div class="col-sm-6 text-right">
                            @Html.DisplayFor(x => item.CreatedDate)
                        </div>
                    </div>
                    <p>
                        @Html.DisplayFor(x => item.Comment)
                    </p>
                }   
            }

        </div>
            </div>
    </div>
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h4>Thành phần</h4>
                        <p>@Html.DisplayFor(modelItem => Model.Ingredients)</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h4>Giá trị dinh dưỡng</h4>
                        <div>
                            <table class="table table-bordered">
                                <thead>
                                    <tr style="background-color: #fff8da">
                                        <th class="py-1" style="border-right-color: white"></th>
                                        <th class="py-1" style="border-right-color: white"></th>
                                        <th class="text-right py-1">Phần trăm</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in @Model.NutritionFacts)
                                    {
                                        <tr> 
                                            <th class="py-1" style="border-right-color: white">@Html.DisplayFor(a => item.NutritionFactName)</th>
                                            <td class="py-1" style="border-right-color: white">@Html.DisplayFor(a => item.NutritionFactValue)</td>
                                            <td class="py-1 text-right">@Html.DisplayFor(a => item.NutritionFactPercent)</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h4>Thêm thông tin</h4>
                       @Html.Raw(Model.MoreInfo)
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">

            </div>
            <div class="col-md-6">

            </div>
        </div>
    </div>

</div>