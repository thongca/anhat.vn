<script>
    function loadNewRecents() {
        let listnewsrecents = ""
        const data = JSON.parse(localStorage.getItem('newsrecent'));
        if (data) {
            for (var i = 0; i < data.length; i++) {
                const newsRecentMaster = ` <a href="#" class="blog__sidebar__recent__item">
                                <div class="blog__sidebar__recent__item__pic">
                                    <img src="${data[i].img}" width="70" height="70" style="object-fit: cover;" alt="">
                                </div>
                                <div class="blog__sidebar__recent__item__text">
                                    <h6>${data[i].title}</h6>
                                    <span>${data[i].date}</span>
                                </div>
                            </a>`;
                listnewsrecents += newsRecentMaster;
            }
            $('.blog__sidebar__recent').html(listnewsrecents);
        }

    }
    function init() {
        setTimeout(() => {
            this.loadNewRecents();
        }, 100)
    }
    this.init();
</script>
